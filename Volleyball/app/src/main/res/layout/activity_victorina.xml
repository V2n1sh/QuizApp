<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Victorina"
    android:background="@drawable/gradient_background">

    <Button
        android:id="@+id/optionButton4"
        android:layout_width="151dp"
        android:layout_height="78dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="178dp"
        android:backgroundTint="@color/white"
        android:text="@string/ButtonName1"
        android:textColor="#0A0A0A"
        android:textColorLink="#FBFBFB"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/optionButton3"
        android:layout_width="151dp"
        android:layout_height="78dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="178dp"
        android:backgroundTint="@color/white"
        android:text="@string/ButtonName1"
        android:textColor="#0A0A0A"
        android:textColorLink="#FBFBFB"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/optionButton4" />

    <Button
        android:id="@+id/optionButton2"
        android:layout_width="151dp"
        android:layout_height="78dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="71dp"
        android:backgroundTint="@color/white"
        android:text="@string/ButtonName1"
        android:textColor="#0A0A0A"
        android:textColorLink="#FBFBFB"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/optionButton4"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/optionButton1"
        android:layout_width="151dp"
        android:layout_height="78dp"
        android:layout_marginStart="33dp"
        android:layout_marginBottom="71dp"
        android:backgroundTint="@color/white"
        android:text="@string/ButtonName1"
        android:textColor="#0A0A0A"
        android:textColorLink="#FBFBFB"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@+id/optionButton3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textTitleQuest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="204dp"
        android:text="@string/SelectionTopic"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textTitleTopic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Ну привет!!"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_Back"
        android:layout_width="43dp"
        android:layout_height="32dp"
        android:layout_marginTop="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/back" />
</androidx.constraintlayout.widget.ConstraintLayout>